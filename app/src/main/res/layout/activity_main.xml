<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vishal_dhaware.day_zore.MainActivity">

     <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Simple Interest"
    android:gravity="center"
    android:textSize="24sp"
    android:textStyle="bold"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Principle:"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/P_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Rate:"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/R_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Time:"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/T_editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Interest Result ::"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        />

</LinearLayout>
